# vim: set ft=sh :

example() {
    echo "argument = $1"
}

dirsize() {
    find $1 -maxdepth 1 -type d -exec du -hs {} \; | sort -k 2
}

nvim() {
    nvim=$(which nvim)
    project_name=$(basename $PWD)
    if [ -f ~/.sessions/$project_name.vim ]; then
        $nvim "+OpenSession $project_name" "$*"
    else
        $nvim "$*"
    fi
}
